{
  "name": "@init-kz/editorjs-code-highlight",
  "version": "1.0.0",
  "description": "A micro code-editor for awesome web pages",
  "homepage": "https://init.kz/en",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/init-pkg/editorjs-code-highlight.git"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "style": "dist/index.css",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./index.css": {
      "import": "./dist/index.css",
      "require": "./dist/index.css"
    }
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "serve": "http-server -p 8080",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "Code",
    "Highlight",
    "Prismjs",
    "code-editor",
    "syntax-highlight",
    "highlight"
  ],
  "author": "INIT.KZ",
  "license": "MIT",
  "maintainers": [
    {
      "name": "Sauyrbai Imangali",
      "url": "https://github.com/Imangali-Sauyrbay"
    }
  ],
  "devDependencies": {
    "@editorjs/editorjs": "^2.30.8",
    "@init-kz/init-code-highlight-ts": "^1.0.6",
    "@types/node": "^22.13.10",
    "http-server": "^14.1.1",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "directories": {
    "test": "tests"
  },
  "bugs": {
    "url": "https://github.com/init-pkg/editorjs-code-highlight/issues"
  },
  "peerDependencies": {
    "@editorjs/editorjs": "^2.30.8",
    "@init-kz/init-code-highlight-ts": "^1.0.2"
  }
}
